import java.util.Scanner;
public class Primeraclase 
{

	public static void main(String[] args) 
	{ 
		//JUAN FELIPE MIRANDA ARCINIEGAS 1080042208 UNALMED
		//Dado el radio de un círculo. Haga un algoritmo que obtenga el área del círculo y la longitud de la circunferencia.
		//Las variables son double, para que, en caso de que el tester ingrese decimales, el codigo siga funcionando correctamente.
		double r;
		Scanner radio= new Scanner(System.in);
		System.out.println("Ingrese el radio del circulo:");
		r= radio.nextDouble();
		double diametro=2*r;
		System.out.println("El area del circulo es: "+(Math.PI*Math.pow(r, 2)));
		System.out.println("La longitud de la circunferencia es de: "+ (diametro*Math.PI));
		
	}

